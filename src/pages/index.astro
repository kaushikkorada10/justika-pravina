    },
     {
        src: ServiceImg8,
        alt: "Family law",
        title: "Cyber Law",
        description:
            "We believe you, or else, we don’t take the case. With many clients coming from a background of no experience of the criminal justice system, we promise to help with our skill, experience and expertise",
    },
     {
        src: ServiceImg6,
        alt: "Family law",
        title: "Civil Law",
        description:
            "We believe you, or else, we don’t take the case. With many clients coming from a background of no experience of the criminal justice system, we promise to help with our skill, experience and expertise",
    },
     {
        src: ServiceImg9,
        alt: "Family law",
        title: "Arbotery law",
        description:
            "We believe you, or else, we don’t take the case. With many clients coming from a background of no experience of the criminal justice system, we promise to help with our skill, experience and expertise",
    },
   
