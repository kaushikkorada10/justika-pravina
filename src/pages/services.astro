---
// src/pages/services.astro
import Layout from "../layout/Layout.astro";
import { Image } from "astro:assets";

import ServiceImg1 from "../assets/images/personal-injury.avif";
import ServiceImg2 from "../assets/images/business-law.avif";
import ServiceImg3 from "../assets/images/criminal-defense.avif";
import ServiceImg4 from "../assets/images/family-law.avif";

const serviceList = [
  {
    src: ServiceImg1,
    alt: "Family Law",
    title: "Family Law",
    description:
      "We fight, so you don’t have to. Family disputes are most difficult to handle, because often the parties will have ongoing relationship with each other even after the fight.",
  },
  {
    src: ServiceImg2,
    alt: "Migration Matters",
    title: "Migration Matters",
    description:
      "Our migration legal practitioners perform compliance checks and pre-assessment for you before application submission. 13+ years of experience in migration appeals.",
  },
  {
    src: ServiceImg3,
    alt: "Commercial Matters",
    title: "Commercial Matters",
    description:
      "We tackle domestic and international disputes using strong commercial litigation strategies for the best outcomes.",
  },
  {
    src: ServiceImg4,
    alt: "Criminal Matters",
    title: "Criminal Matters",
    description:
      "We believe you — or we don’t take the case. Our team supports clients unfamiliar with the justice system with expertise.",
  },
];
---

<Layout navVariant="dark">
  <section class="service" style="background-color: #0B2B1B; padding: 6rem 1rem;">
    <div class="container">
      <h1 style="text-align:center; color: #ffffff;">
        Legal <span style="color: #C79855;">Services</span> We Offer
      </h1>
      <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 2rem; margin-top: 2rem;">
        {
          serviceList.map(service => (
            <article style="border:1px solid #244B3D; border-radius: 12px; overflow: hidden; background: #153929;">
              <Image src={service.src} alt={service.alt} style="width:100%; height:200px; object-fit:cover;" />
              <div style="padding: 1.5rem;">
                <h3 style="font-size: 1.4rem; margin-bottom: 0.5rem; color: #ffffff;">{service.title}</h3>
                <p style="font-size: 0.95rem; color: #cccccc;">{service.description}</p>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
